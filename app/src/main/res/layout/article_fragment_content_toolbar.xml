<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/article_fragment_content_toolbar_appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:expanded="false">

    <net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout
        android:theme="?attr/habrachanToolbar"
        android:id="@+id/article_fragment_content_toolbar_collapsing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:maxLines="12"
        app:expandedTitleMarginTop="32dp"
        app:expandedTitleMarginStart="32dp"
        app:expandedTitleMarginEnd="32dp"
        app:expandedTitleMarginBottom="8dp"
        app:collapsedTitleTextAppearance="@style/Habrachan.TextAppearance.CollapsingToolbar.Collapsed"
        app:expandedTitleTextAppearance="@style/Habrachan.TextAppearance.CollapsingToolbar.Expanded"
        app:expandedTitleGravity="center_horizontal|top"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:toolbarId="@id/article_fragment_content_toolbar_toolbar">

        <androidx.appcompat.widget.Toolbar
            style="?attr/habrachanToolbar"
            app:navigationIcon="@drawable/ic_arrow_back"
            android:id="@+id/article_fragment_content_toolbar_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:id="@+id/article_fragment_content_toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginTop="32dp"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0.7">

            <!-- Invisible view helps to calculate and hold an optimal title height -->
            <TextView
                android:visibility="invisible"
                android:background="@android:color/transparent"
                android:id="@+id/article_fragment_content_toolbar_calculator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top"
                android:textAppearance="@style/Habrachan.TextAppearance.CollapsingToolbar.Expanded"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/article_fragment_content_toolbar_author_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_account_stub"
                android:tint="@android:color/white"
                android:tintMode="src_atop"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/article_fragment_content_toolbar_calculator" />

            <TextView
                android:id="@+id/article_fragment_content_toolbar_author_login"
                android:gravity="start|center_vertical"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/article_fragment_content_toolbar_author_avatar"
                app:layout_constraintStart_toEndOf="@id/article_fragment_content_toolbar_author_avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/article_fragment_content_toolbar_author_avatar" />

            <TextView
                android:id="@+id/article_fragment_content_toolbar_time"
                android:maxLines="1"
                android:layout_marginEnd="8dp"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:gravity="center_vertical|end"
                app:layout_constraintTop_toBottomOf="@id/article_fragment_content_toolbar_author_login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout>

</com.google.android.material.appbar.AppBarLayout>
