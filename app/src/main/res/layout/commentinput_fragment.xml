<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/habrachanDefault"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/commentinput_fragment_toolbar"
        style="?attr/habrachanToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/commentinput_fragment_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:hint="@string/commentinput_message_edit_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/barrier2"
        app:layout_constraintTop_toBottomOf="@id/commentinput_fragment_toolbar"
        app:layout_constraintVertical_bias="0.0" />


        <HorizontalScrollView
            android:id="@+id/commentinput_fragment_horizontalscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/commentinput_fragment_markup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    style="@style/Habrachan.Button.Toggle"
                    android:id="@+id/commentinput_fragment_markup_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_bold" />

    <!--            <Button-->
    <!--                android:id="@+id/commentinput_fragment_markup_italic"-->
    <!--                android:layout_width="wrap_content"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                android:text="Italic"-->
    <!--                style="?attr/materialButtonOutlinedStyle" />-->

    <!--            <Button-->
    <!--                android:id="@+id/commentinput_fragment_markup_underscore"-->
    <!--                android:layout_width="wrap_content"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                android:text="Underscore"-->
    <!--                style="?attr/materialButtonOutlinedStyle" />-->

    <!--            <Button-->
    <!--                android:id="@+id/button4"-->
    <!--                android:layout_width="wrap_content"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                android:text="Button 4"-->
    <!--                style="?attr/materialButtonOutlinedStyle" />-->

            </com.google.android.material.button.MaterialButtonToggleGroup>

        </HorizontalScrollView>

    <ImageButton
        android:id="@+id/commentinput_fragment_send"
        style="@style/Habrachan.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_reply"
        android:tint="@color/colorPrimary"
        app:icon="@drawable/ic_reply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="commentinput_fragment_send,commentinput_fragment_horizontalscroll"
        tools:layout_editor_absoluteY="695dp" />

</androidx.constraintlayout.widget.ConstraintLayout>