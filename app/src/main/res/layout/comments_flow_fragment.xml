<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/comments_flow_fragment_slidingpanel"
        layout="@layout/comments_flow_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/comments_flow_fragment_markup_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/comments_flow_fragment_send_progress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/comments_flow_fragment_markup_container"
        app:layout_constraintTop_toBottomOf="@id/comments_flow_fragment_slidingpanel" />

    <com.google.android.material.button.MaterialButton
        android:visibility="gone"
        android:id="@+id/comments_flow_fragment_send"
        style="?attr/habrachanDefaultButtonText"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:enabled="false"
        app:icon="@drawable/ic_send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/comments_flow_fragment_markup_container"
        app:layout_constraintTop_toBottomOf="@id/comments_flow_fragment_slidingpanel" />

    <TextView
        android:visibility="gone"
        android:id="@+id/comments_flow_fragment_markup_container"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="Note: html or markdown does not supports now"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/comments_flow_fragment_markup_barrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comments_flow_fragment_slidingpanel" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/comments_flow_fragment_markup_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="comments_flow_fragment_send,comments_flow_fragment_send_progress"
        app:layout_constraintStart_toEndOf="@id/comments_flow_fragment_markup_container" />

</androidx.constraintlayout.widget.ConstraintLayout>

