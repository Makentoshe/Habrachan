<resources>

    <!-- Default theme used for displaying popup windows and does not relates to any theme -->
    <style name="Default.Popup.Style" parent="Theme.MaterialComponents">
        <item name="android:windowEnterAnimation">@anim/popup_window_enlarge</item>
        <item name="android:windowExitAnimation">@anim/popup_window_shrink</item>
    </style>

    <style name="Habrachan.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#ff9cc2ce</item>
        <item name="colorAccent">#ff9cc2ce</item>
        <item name="colorPrimaryDark">#ff728e96</item>

        <item name="habrachanToolbar">@style/Habrachan.Light.Toolbar</item>
        <item name="habrachanToolbarInput">@style/Habrachan.Light.Toolbar.Input</item>
        <item name="habrachanToolbarButton">@style/Habrachan.Light.Toolbar.Button</item>
        <item name="habrachanToolbarChip">@style/Habrachan.Light.Toolbar.Chip</item>

        <item name="habrachanBottomBar">@style/Habrachan.Light.BottomBar</item>
        <item name="habrachanPopup">@style/Habrachan.Light.Popup</item>
        <item name="habrachanDefault">@style/Habrachan.Light.Default</item>
        <item name="habrachanChip">@style/Habrachan.Light.Chip</item>
    </style>

    <style name="Habrachan.Light.Toolbar" parent="Habrachan.Light">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textAppearance">@style/Habrachan.Light.TextAppearance</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:tintMode">src_atop</item>
    </style>

    <style name="Habrachan.Light.Toolbar.Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@android:color/white</item>
        <item name="hintTextAppearance">@style/Habrachan.Light.TextAppearance</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="endIconTint">@android:color/white</item>
    </style>

    <style name="Habrachan.Light.Toolbar.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Habrachan.Light.Toolbar.Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/selector_habrachan_light_toolbar_chip_background</item>
        <item name="android:textColor">@color/selector_habrachan_light_toolbar_chip_foreground</item>
        <item name="checkedIconTint">@color/selector_habrachan_light_toolbar_chip_foreground</item>
    </style>

    <style name="Habrachan.Light.BottomBar" parent="Habrachan.Light.Toolbar">
        <item name="itemIconTint">@android:color/white</item>
        <item name="itemTextColor">@android:color/white</item>
        <item name="itemRippleColor">@color/colorPrimaryDark</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabIconTint">@android:color/white</item>
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabRippleColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Habrachan.Light.Chip" parent="Habrachan.Light">
        <item name="chipBackgroundColor">@color/selector_habrachan_light_toolbar_chip_background</item>
        <item name="android:textColor">@color/selector_habrachan_light_toolbar_chip_foreground</item>
        <item name="chipStrokeColor">@color/colorPrimary</item>
    </style>

    <style name="Habrachan.Light.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Habrachan.Light.TextAppearance.Large" parent="Habrachan.Light.TextAppearance">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Habrachan.Light.TextAppearance.Small" parent="Habrachan.Light.TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Habrachan.TextAppearance.CollapsingToolbar.Collapsed" parent="Theme.MaterialComponents">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Habrachan.TextAppearance.CollapsingToolbar.Expanded" parent="Theme.MaterialComponents">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Habrachan.TextAppearance.BottomBar" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Habrachan.Light.Popup" parent="Habrachan.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:tint">@android:color/black</item>
        <item name="android:tintMode">src_atop</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Habrachan.Light.Default" parent="Habrachan.Light">
        <item name="android:background">@android:color/white</item>
    </style>
</resources>
