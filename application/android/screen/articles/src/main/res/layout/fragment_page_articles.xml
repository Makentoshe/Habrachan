<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_articles_guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/dimenML" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_page_articles_guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dimenL" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_page_articles_guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dimenL" />

    <TextView
        android:visibility="gone"
        style="@style/Habrachan.Text.Main"
        android:id="@+id/fragment_page_articles_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="@id/fragment_articles_guideline_top" />

    <TextView
        android:visibility="gone"
        style="@style/Habrachan.Text.Support"
        android:id="@+id/fragment_page_articles_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dimenMS"
        app:layout_constraintTop_toBottomOf="@id/fragment_page_articles_title"
        app:layout_constraintStart_toStartOf="@id/fragment_page_articles_guideline_start"
        app:layout_constraintEnd_toEndOf="@id/fragment_page_articles_guideline_end" />

    <com.google.android.material.button.MaterialButton
        android:visibility="gone"
        style="@style/Habrachan.Button.Text"
        android:id="@+id/fragment_page_articles_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/articles_retry"
        android:layout_marginTop="@dimen/dimenML"
        app:layout_constraintTop_toBottomOf="@id/fragment_page_articles_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/fragment_page_articles_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:visibility="gone"
        android:id="@+id/fragment_page_articles_swipe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_page_articles_recycler"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
