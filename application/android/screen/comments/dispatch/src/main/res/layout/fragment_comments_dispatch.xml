<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background">

    <com.google.android.material.appbar.MaterialToolbar
        style="@style/Habrachan.Toolbar.Discolor"
        android:id="@+id/fragment_comments_dispatch_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:title="@string/comments_dispatch_article_title_initial"
        app:subtitle="@string/comments_dispatch_article_subtitle"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/Habrachan.Separator"
        android:id="@+id/fragment_comments_dispatch_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_height"
        app:layout_constraintTop_toBottomOf="@id/fragment_comments_dispatch_toolbar" />

    <ScrollView
        android:id="@+id/fragment_comments_dispatch_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_comments_dispatch_separator"
        app:layout_constraintBottom_toBottomOf="parent">

        <include
            layout="@layout/layout_comment_item"
            android:id="@+id/fragment_comments_dispatch_comment" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>