<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        style="@style/Habrachan.Toolbar.Discolor"
        android:id="@+id/fragment_comments_dispatch_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        app:title="@string/comments_dispatch_article_title_initial"
        app:subtitle="@string/comments_dispatch_article_subtitle"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_comments_dispatch_toolbar"
        app:layout_constraintBottom_toBottomOf="@id/fragment_comments_dispatch_bottom_barrier_horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="@color/background">

            <View
                style="@style/Habrachan.Separator"
                android:id="@+id/fragment_comments_dispatch_separator_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                android:id="@+id/fragment_comments_dispatch_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/fragment_comments_dispatch_separator_content"
                app:layout_constraintBottom_toBottomOf="parent">

                <include
                    layout="@layout/layout_comment_item"
                    android:id="@+id/fragment_comments_dispatch_comment" />

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/Habrachan.BottomSheet"
            android:id="@+id/fragment_comments_dispatch_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <View
                style="@style/Habrachan.Separator"
                android:id="@+id/fragment_comments_dispatch_sheet_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/fragment_comments_dispatch_sheet_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_comments_dispatch_sheet_separator"
                app:layout_constraintBottom_toBottomOf="parent">

                <EditText
                    android:id="@+id/fragment_comments_dispatch_sheet_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:hint="Jot something down"
                    android:layout_marginTop="@dimen/dimenS"
                    android:layout_marginHorizontal="@dimen/dimenS" />

            </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/fragment_comments_dispatch_bottom_barrier_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:barrierDirection="top"
        app:constraint_referenced_ids="fragment_comments_dispatch_bottom_send, fragment_comments_dispatch_bottom_todo" />

    <TextView
        android:id="@+id/fragment_comments_dispatch_bottom_todo"
        android:layout_width="0dp"
        android:layout_height="@dimen/heightLL"
        android:background="@color/background"
        android:gravity="center"
        android:text="This feature is not implemented yet, but the space is taken"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fragment_comments_dispatch_bottom_barrier_vertical"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/fragment_comments_dispatch_bottom_barrier_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:barrierDirection="start"
        app:constraint_referenced_ids="fragment_comments_dispatch_bottom_send, fragment_comments_dispatch_bottom_progress" />

    <com.google.android.material.button.MaterialButton
        style="@style/Habrachan.Button.Icon"
        android:id="@+id/fragment_comments_dispatch_bottom_send"
        android:layout_width="@dimen/heightLL"
        android:layout_height="@dimen/heightLL"
        android:enabled="false"
        app:icon="@drawable/ic_send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:visibility="gone"
        style="@style/Habrachan.Progress"
        android:id="@+id/fragment_comments_dispatch_bottom_progress"
        android:layout_width="@dimen/heightLL"
        android:layout_height="@dimen/heightLL"
        android:padding="@dimen/dimenM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>