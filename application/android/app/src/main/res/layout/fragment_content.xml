<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black">

    <androidx.appcompat.widget.Toolbar
        style="@style/Habrachan.Light.Toolbar"
        android:id="@+id/fragment_content_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightLL"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:background="@drawable/drawable_background_gradient_monochrome"
        android:translationZ="1dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fragment_content_viewpager"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

